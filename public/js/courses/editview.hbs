{{#if message }}
  {{{message}}}
{{/if}}

<form class="well">

  <label>Course name: </label>
  <input name="name" type="text" value="{{course.name}}">
 
  <label>Duration: </label>
  <input name="duration" type="text" value="{{course.duration}}">

  <label>Description: </label>
  <input name="description" type="text" value="{{course.description}}">

  <p>
    <input type="submit" class="btn btn-primary" value="Save" />

  {{#if course.id}}
    <input type="button" class="btn btn-danger" value="Delete" id="delete"/>
  {{/if}}
  
</form>