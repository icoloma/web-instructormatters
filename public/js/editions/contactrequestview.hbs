<form class="well">

  <label> Your email</label>
  <input name="from" type="email" value="{{contactrequest.from}}">

  <label>Your message</label>
  <textarea name="text" class="contact-message">{{contactrequest.body}}</textarea>

  <div class="control-group">
    <div id="recaptcha"/>
    <button type="button" id="send" data-loading-text="Sending..." class="btn btn-primary">Send</button>
  </div>

</form>