extends ../layout

include ../includes/admin-mixins

append content

  h1 Add new certificate
  form(method="post", action="/certificates/" + certificate._id)
    .control-group
      label Name
      input(type="text", name="name")
    .control-group
      label Email
      input(type="email", name="email")
    .control-group
      label Company
      input(type="text")
    .control-group
      label Uuid
      input(type="text", name="uuid")
    .form-actions
      button.btn(type="submit") Submit
      a(href="/certificates").btn Cancel
  form(method="post", action="/certificates/" + certificate._id + "/delete")
      button.btn.btn-warning.btn-large.pull-right(type="submit") Delete