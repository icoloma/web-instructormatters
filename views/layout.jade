doctype 5
html
  head
    meta(charset="utf-8")
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
    //if lt IE 10
      script
        window.location.href=/(http(s?):\/\/[^\/]+).*/.exec(window.location.href)[1] + '/browser-not-supported.html'
  body

    .page-header    
      a(href="/", title="Home").btn
        i.icon-home 

      a( href="/courses",  title="Courses").btn   
        i.icon-book

      if(locals.isAdmin)
        a(href="/users", title="Users").btn
          i.icon-user
     
      if(locals.currentUser && ! locals.isAdmin)
        a(href="/myeditions", title="My editions").btn
          i.icon-list

      if (locals.currentUser) 
        p
          | Wellcome #{locals.currentUser.name} - (#{locals.currentUser.email}) 
          a(href='/logout') - Logout 
      else
        p
          a(href='/login') Login

      h1= title  
      
    .messages-container
    
    
    block content
    
    script(src='/js/app.js')
    script(src='/js/lib/require.js')
    
    block scripts